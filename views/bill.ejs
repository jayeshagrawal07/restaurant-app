<%- include('partials/header'); -%>
<link rel='stylesheet' type='text/css' href='css/bill-style.css' />
</head>

<body>
    <div id="page-wrap">

        <div id="header">INVOICE</div>

        <div id="identity">

            <div id="address">Chris Coyier
                123 Appleseed Street
                Appleville, WI 53719
<br>
                Phone: (555) 555-5555</div>

            <div id="logo">
                <img id="image" src="images/logo.png" alt="logo" />
            </div>

        </div>

        <div style="clear:both"></div>

        <div id="customer">

            <div id="customer-title">Widget Corp.<br>
                c/o Steve Widget</div>
            <table id="meta">
                <tr>
                    <td class="meta-head">Invoice #</td>
                    <td>
                        <div>000123</div>
                    </td>
                </tr>
                <tr>

                    <td class="meta-head">Date</td>
                    <td>
                        <div id="date">December 15, 2009</div>
                    </td>
                </tr>
                <tr>
                    <td class="meta-head">Amount Due</td>
                    <td>
                        <div class="due">$875.00</div>
                    </td>
                </tr>

            </table>

        </div>

        <table id="items">

            <tr>
                <th>Item</th>
                <th>Unit Cost</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>

            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <div>Web Updates</div><a class="delete" href="javascript:;" title="Remove row">X</a>
                    </div>
                </td>
                <td>
                    <div class="cost">$650.00</div>
                </td>
                <td>
                    <div class="qty">1</div>
                </td>
                <td><span class="price">$650.00</span></td>
            </tr>

            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <div>SSL Renewals</div><a class="delete" href="javascript:;" title="Remove row">X</a>
                    </div>
                </td>
                <td>
                    <div class="cost">$75.00</div>
                </td>
                <td>
                    <div class="qty">3</div>
                </td>
                <td><span class="price">$225.00</span></td>
            </tr>

            <tr>
                <td colspan="1" class="blank"> </td>
                <td colspan="2" class="total-line">Subtotal</td>
                <td class="total-value">
                    <div id="subtotal">$875.00</div>
                </td>
            </tr>
            <tr>

                <td colspan="1" class="blank"> </td>
                <td colspan="2" class="total-line">Total</td>
                <td class="total-value">
                    <div id="total">$875.00</div>
                </td>
            </tr>
            <tr>
                <td colspan="1" class="blank"> </td>
                <td colspan="2" class="total-line">Amount Paid</td>

                <td class="total-value">
                    <div id="paid">$0.00</div>
                </td>
            </tr>
            <tr>
                <td colspan="1" class="blank"> </td>
                <td colspan="2" class="total-line balance">Balance Due</td>
                <td class="total-value balance">
                    <div class="due">$875.00</div>
                </td>
            </tr>

        </table>

        <div id="terms">
            <div>Thank You For Dining With Us!</div>
        </div>

    </div>
    <%- include('partials/footer'); -%>