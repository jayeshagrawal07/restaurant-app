<%- include('partials/header'); -%>
<link rel='stylesheet' type='text/css' href='/stylesheets/bill-style.css' />
</head>

<body>
    <div id="page-wrap">

        <div id="header">BILL</div>

        <div id="identity">

            <div id="address">Chris Coyier
                123 Appleseed Street
                Appleville, WI 53719
                <br>
                Phone: (555) 555-5555
            </div>

            <div id="logo">
                <img id="image" src="images/logo.png" alt="logo" />
            </div>

        </div>

        <div style="clear:both"></div>

        <div id="customer">

            <div id="customer-title"><%= table %></div>

            <table id="meta">
                <tr>
                    <td class="meta-head">Bill #</td>
                    <td>
                        <div><%= billno %></div>
                    </td>
                </tr>
                <tr>

                    <td class="meta-head">Date</td>
                    <td>
                        <div id="date"><%= date %></div>
                    </td>
                </tr>
                <tr>
                    <td class="meta-head">Amount Due</td>
                    <td>
                        <div class="due">&#8377;<%= amount %></div>
                    </td>
                </tr>

            </table>

        </div>

        <table id="items">

            <tr>
                <th>Item</th>
                <th>Unit Cost</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
            <% orders.forEach((dish) => { %>
            <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <div><%= dish.dish.name%></div>
                    </div>
                </td>
                <td>
                    <div class="cost">&#8377;<%= dish.dish.price%></div>
                </td>
                <td>
                    <div class="qty"><%= dish.quantity%></div>
                </td>
                <td><span class="price">&#8377;<%= dish.price%></span></td>
            </tr>
            <%});%>
            <!-- <tr class="item-row">
                <td class="item-name">
                    <div class="delete-wpr">
                        <div>SSL Renewals</div>
                    </div>
                </td>
                <td>
                    <div class="cost">$75.00</div>
                </td>
                <td>
                    <div class="qty">3</div>
                </td>
                <td><span class="price">$225.00</span></td>
            </tr> -->

            <tr>
                <td colspan="1" class="blank"> </td>
                <td colspan="2" class="total-line balance">Total</td>
                <td class="total-value balance">
                    <div class="due">&#8377;<%= amount %>
    </div>
    </td>
    </tr>

    </table>

    <div id="terms">
        <div>Thank You For Your Visit<br>Have a Nice Day</div>
    </div>

    </div>
    <%- include('partials/footer'); -%>